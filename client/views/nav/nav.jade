nav.navbar.navbar-default(ng-controller='NavCtrl')
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') CheckList
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right(ng-show='activeUser')
        li.navbar-text {{activeUser.password.email}}
        li: a(ui-sref='home'): i.fa.fa-home &nbsp; Home
        li: a(ui-sref='about'): i.fa.fa-rocket &nbsp; About
        li: a(ui-sref='faq'): i.fa.fa-question &nbsp; FAQ
        li: a(ui-sref='contact'): i.fa.fa-user &nbsp; Contact
        li: a(ui-sref='tasks'): i.fa.fa-check-circle-o &nbsp; Tasks
        li: button.btn-xs.btn-link.navbar-text.text-uppercase(ng-click='logout()'): i.fa.fa-sign-out &nbsp; Logout
      ul.nav.navbar-nav.navbar-right(ng-hide='activeUser')
        li.navbar-text {{activeUser.password.email}}
        li: a(ui-sref='home'): i.fa.fa-home &nbsp; Home
        li: a(ui-sref='about'): i.fa.fa-rocket &nbsp; About
        li: a(ui-sref='faq'): i.fa.fa-question &nbsp; FAQ
        li: a(ui-sref='contact'): i.fa.fa-user &nbsp; Contact
        li: a(ui-sref='register'): i.fa.fa-user-plus &nbsp; Register
        li: a(ui-sref='login'): i.fa.fa-key &nbsp; Login
